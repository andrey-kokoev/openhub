{
  "name": "@openhub2/provider-azure",
  "version": "0.0.1",
  "description": "OpenHub provider for Azure: Cosmos DB, Redis Cache, Blob Storage",
  "license": "Apache-2.0",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "clean_install": "rm -rf node_modules dist && pnpm install"
  },
  "dependencies": {
    "@openhub2/types": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "publishConfig": {
    "access": "public"
  }
}

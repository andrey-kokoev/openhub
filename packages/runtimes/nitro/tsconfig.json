{
  "compilerOptions": {
    /* Base configuration */
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ESNext"],
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    
    /* Build settings */
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    /* Nitro & H3 Specifics */
    "types": [
      "nitropack",
      "h3"
    ],

    /* Monorepo Path Mapping */
    "paths": {
      "@openhub2/dharma": ["../../dharma/types/index.ts"],
      "@openhub2/dharma/subtypes": ["../../dharma/types/subtypes/index.ts"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
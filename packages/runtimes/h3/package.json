{
  "name": "@openhub2/runtime-h3",
  "version": "0.0.1",
  "description": "OpenHub runtime integration for H3",
  "license": "Apache-2.0",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "clean_install": "rm -rf node_modules dist && pnpm install"
  },
  "dependencies": {
    "@openhub2/dharma": "workspace:*"
  },
  "peerDependencies": {
    "h3": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "h3": "^1.15.4",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "publishConfig": {
    "access": "public"
  }
}

{
  "name": "@openhub2/example-cf-nitro-vite",
  "version": "0.0.1",
  "description": "Example: Vite + Nitro + Cloudflare with OpenHub remote bindings",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm:dev:nitro\" \"npm:dev:vite\"",
    "dev:nitro": "nitro dev",
    "dev:vite": "vite",
    "dev:remote": "OPENHUB_REMOTE=true concurrently \"npm:dev:nitro\" \"npm:dev:vite\"",
    "test": "(pnpm run test:unit) && (pnpm run test:e2e)",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "build": "vite build && nitro build",
    "deploy": "wrangler deploy",
    "preview": "nitro preview",
    "db:migrate": "wrangler d1 execute openhub-examples-test-fixture --remote --file=./migrations/0001_create_users.sql",
    "db:migrate:local": "wrangler d1 execute openhub-examples-test-fixture --local --file=./migrations/0001_create_users.sql",
    "typecheck": "tsc --noEmit",
    "clean_install": "rm -rf node_modules dist .output .wrangler && pnpm install"
  },
  "dependencies": {
    "@openhub2/provider-cloudflare": "workspace:*",
    "@openhub2/runtime-nitro": "workspace:*"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.3",
    "concurrently": "^9.1.2",
    "execa": "^9.6.1",
    "nitropack": "^2.12.9",
    "playwright": "^1.57.0",
    "typescript": "^5.9.3",
    "vite": "^6.0.11",
    "vitest": "^4.0.16",
    "wrangler": "^4.56.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
{
  "name": "@openhub2/example-cf-hono-vite",
  "version": "0.0.1",
  "description": "Example: Vite + Hono + Cloudflare with OpenHub remote bindings",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm:dev:hono\" \"npm:dev:vite\"",
    "dev:hono": "wrangler dev server/index.ts",
    "dev:vite": "vite",
    "dev:remote": "OPENHUB_REMOTE=true concurrently \"npm:dev:hono\" \"npm:dev:vite\"",
    "test": "(pnpm run test:unit) && (pnpm run test:e2e)",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "build": "vite build",
    "deploy": "wrangler deploy",
    "db:migrate": "wrangler d1 execute openhub-examples-test-fixture --remote --file=./migrations/0001_create_users.sql",
    "db:migrate:local": "wrangler d1 execute openhub-examples-test-fixture --local --file=./migrations/0001_create_users.sql",
    "typecheck": "tsc --noEmit",
    "clean_install": "rm -rf node_modules dist .wrangler && pnpm install"
  },
  "dependencies": {
    "@openhub2/provider-cloudflare": "workspace:*",
    "@openhub2/runtime-hono": "workspace:*",
    "hono": "^4.11.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250109.0",
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.3",
    "concurrently": "^9.1.2",
    "execa": "^9.6.1",
    "playwright": "^1.57.0",
    "typescript": "^5.9.3",
    "vite": "^6.0.11",
    "vitest": "^4.0.16",
    "wrangler": "^4.56.0"
  },
  "publishConfig": {
    "access": "public"
  }
}

{
  "name": "@openhub2/metaframework-nuxt",
  "version": "0.0.3",
  "description": "OpenHub integration for Nuxt",
  "license": "Apache-2.0",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --external @nuxt/kit --external @nuxt/schema --external nuxt --external nitropack --shims",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "typecheck": "tsc --noEmit",
    "clean_install": "rm -rf node_modules dist && pnpm install"
  },
  "dependencies": {
    "@openhub2/types": "workspace:*",
    "@openhub2/runtime-nitro": "workspace:*"
  },
  "peerDependencies": {
    "nuxt": "^4.2.2"
  },
  "devDependencies": {
    "@nuxt/kit": "^4.2.2",
    "nuxt": "^4.2.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "publishConfig": {
    "access": "public"
  }
}